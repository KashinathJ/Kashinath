                    <a href="https://linkedin.com/in/kashinathj" target="_blank" class="group flex flex-col items-center p-3 rounded-xl hover:bg-slate-700/50 transition">
                        <i data-lucide="linkedin" class="w-8 h-8 text-indigo-400 group-hover:text-indigo-300 mb-1"></i>
                        <span class="text-sm text-gray-300">LinkedIn</span>
                    </a>
                </div>
                
                <form id="contactForm" class="space-y-4">
                    <input type="text" id="name" placeholder="Your Name" required class="w-full p-3 rounded-lg bg-gray-900 border border-gray-700 text-white focus:border-cyan-500 focus:ring-cyan-500">
                    <input type="email" id="email" placeholder="Your Email" required class="w-full p-3 rounded-lg bg-gray-900 border border-gray-700 text-white focus:border-cyan-500 focus:ring-cyan-500">
                    <textarea id="message" rows="4" placeholder="Your Message" required class="w-full p-3 rounded-lg bg-gray-900 border border-gray-700 text-white focus:border-cyan-500 focus:ring-cyan-500 resize-none"></textarea>
                    
                    <button type="submit" class="w-full py-3 bg-cyan-600 text-white font-bold rounded-lg hover:bg-cyan-700 transition duration-300 transform hover:scale-[1.01] shadow-lg shadow-cyan-500/30">
                        Send Message
                    </button>
                    <div id="formMessage" class="mt-3 text-center text-sm"></div>
                </form>
            </div>
        </section>
        
    </main>

    <!-- Footer -->
    <footer class="py-6 mt-10 border-t border-slate-700/50 text-center text-gray-400 text-sm">
        <p>&copy; 2025 Kashinath Jada. All rights reserved. | Built with Stylish UI/UX</p>
    </footer>

    <!-- JavaScript for Dynamic UX/Aesthetics -->
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // 1. Initialize Lucide Icons
            lucide.createIcons();
            
            // 2. Mobile Menu Toggle (JavaScript for interactive UX)
            const mobileMenuBtn = document.getElementById('mobile-menu-btn');
            const mobileMenu = document.getElementById('mobile-menu');
            const mobileLinks = document.querySelectorAll('.mobile-nav-link');

            mobileMenuBtn.addEventListener('click', () => {
                mobileMenu.classList.toggle('hidden');
            });
            
            // Close mobile menu when a link is clicked
            mobileLinks.forEach(link => {
                link.addEventListener('click', () => {
                    mobileMenu.classList.add('hidden');
                });
            });

            // 3. Smooth Scrolling and Active Link Highlighting (UX)
            const navLinks = document.querySelectorAll('.nav-link');
            const sections = document.querySelectorAll('main > section, header#home');
            const navBarHeight = document.querySelector('nav').offsetHeight;

            const setActiveLink = () => {
                let currentSectionId = 'home';
                
                sections.forEach(section => {
                    const sectionTop = section.offsetTop - navBarHeight - 50; 
                    if (window.scrollY >= sectionTop) {
                        currentSectionId = section.getAttribute('id');
                    }
                });

                navLinks.forEach(link => {
                    link.classList.remove('text-cyan-400', 'font-bold');
                    link.classList.add('text-gray-300', 'font-medium');
                    if (link.getAttribute('href').substring(1) === currentSectionId) {
                        link.classList.remove('text-gray-300', 'font-medium');
                        link.classList.add('text-cyan-400', 'font-bold');
                    }
                });
            }
            window.addEventListener('scroll', setActiveLink);
            setActiveLink(); // Set initial active link on load
            
            // 4. Simple Form Submission Handling (UX improvement - no alert/confirm)
            const contactForm = document.getElementById('contactForm');
            const formMessage = document.getElementById('formMessage');

            contactForm.addEventListener('submit', (e) => {
                e.preventDefault();
                
                const name = document.getElementById('name').value;
                const submitButton = contactForm.querySelector('button[type="submit"]');

                submitButton.textContent = 'Sending...';
                submitButton.disabled = true;
                formMessage.className = 'mt-3 text-center text-sm text-cyan-400';
                formMessage.textContent = 'Message sending...';
                
                setTimeout(() => {
                    // Simulate form submission success
                    formMessage.textContent = `Success! Thank you, ${name}. I'll get back to you shortly.`;
                    formMessage.className = 'mt-3 text-center text-sm text-green-400 font-semibold';
                    
                    submitButton.textContent = 'Send Message';
                    submitButton.disabled = false;
                    contactForm.reset();
                }, 1500);
            });
            
            // 5. JavaScript-driven Star Field Aesthetic (Attractiveness)
            const starField = document.getElementById('star-field');
            const numStars = 80;

            for (let i = 0; i < numStars; i++) {
                const star = document.createElement('div');
                star.className = 'star';
                star.style.width = star.style.height = `${Math.random() * 2 + 1}px`;
                star.style.top = `${Math.random() * 100}%`;
                star.style.left = `${Math.random() * 100}%`;
                star.style.animationDelay = `${Math.random() * 5}s`;
                star.style.opacity = Math.random() < 0.5 ? 0 : 1; // Start some visible
                
                // Subtle Twinkle/Zoom effect using JS/CSS timing
                star.style.transition = `opacity ${Math.random() * 2 + 1}s, transform ${Math.random() * 3 + 1}s`;
                star.style.transform = `scale(${Math.random() * 0.5 + 0.5})`;

                starField.appendChild(star);
            }

            // Periodically refresh star opacities for a twinkle effect
            setInterval(() => {
                document.querySelectorAll('.star').forEach(star => {
                    // Randomly change opacity to simulate twinkling
                    star.style.opacity = Math.random() < 0.3 ? 0.2 : 0.9;
                });
            }, 3000);
        });
    </script>
</body>
</html>
